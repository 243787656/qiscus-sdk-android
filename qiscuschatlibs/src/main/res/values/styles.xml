<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="QiscusTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/qiscus_primary</item>
        <item name="colorPrimaryDark">@color/qiscus_primary_dark</item>
        <item name="colorAccent">@color/qiscus_accent</item>
        <item name="colorControlNormal">@color/qiscus_divider</item>
        <item name="colorControlActivated">@color/qiscus_accent</item>
        <item name="colorControlHighlight">@color/qiscus_accent</item>
    </style>

    <style name="QiscusCallTheme" parent="QiscusTheme"/>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/qiscus_accent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/qiscus_accent</item>
    </style>
</resources>